<p id="notice"><%= notice %></p>

<h1>Budgets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hours</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Employer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= link_to budget.name, [@employer, budget] %></td>
        <td><%= budget.hours %></td>
        <td><%= budget.start_date %></td>
        <td><%= budget.end_date %></td>
        <td><%= link_to budget.employer.name, [@employer] %></td>
        
        
        <td><%= link_to 'Edit Budget', edit_employer_budget_path(@employer, budget) %></td>
        <td><%= link_to 'Destroy Budget', [@employer, budget], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Budget',new_employer_budget_path(@employer) %>
