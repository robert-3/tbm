<%= form_with(model: [@employee, timesheet], local: true) do |form| %>
  <% if timesheet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(timesheet.errors.count, "error") %> prohibited this timesheet from being saved:</h2>

      <ul>
      <% timesheet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
  <strong>Employee:</strong>
  <%= @timesheet.employee.name %>
</p>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :timesheet_name %>
  </div>

  <div class="field">
    <%= form.label :service_hours %>
    <%= form.number_field :service_hours, id: :timesheet_service_hours %>
  </div>

  <div class="field">
    <%= form.label :date_of_service %>
    <%= form.date_select :date_of_service, id: :timesheet_date_of_service %>
  </div>
  
  <div class="control-group">
    <%= form.label :budget_id, class: 'control-label' %>
    <div class="controls">
       <%= collection_select( :timesheet, :budget_id, Budget.all, :id, :name, {}, { :multiple => false } ) %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
