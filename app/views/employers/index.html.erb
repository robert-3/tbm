<p id="notice"><%= notice %></p>

<h3>Employers</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= link_to employer.name, employer %></td>
        <td><%= link_to 'Edit Employer', edit_employer_path(employer) %></td> 
        <td><%= link_to 'Destroy Employer', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ Employer', new_employer_path, class: "btn btn-outline-secondary" %>
